<div class="col-sm-2 col-md-4 col-lg-4 product">
  <div class="product-name">
  	<h1><%= product.name %></h1>
  </div>
  <div>
    <%= link_to image_tag(product.image_url, class: "product-image image-responsive"), product %>
  </div>
  <p class="product-description"><%= product.description %></p>
  <p class="product-price"><%= product.price %></p>
  <p class="destroy-product">
  	<%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %> |
  	<%= link_to 'Edit', edit_product_path(product) %></p>
</div><!-- /col -->

	
